        <!-- Sidebar -->
        <aside class="sidebar" id="sidebar">
            <div class="sidebar-brand">
                <i class="fas fa-recycle sidebar-brand-icon"></i>
                <h1 class="sidebar-brand-text">SafeCycle</h1>
            </div>
            <div class="sidebar-menu">
