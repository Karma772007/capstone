                            <i class="fas fa-wrench"></i>
                            <span>Check Maintenance</span>
                        </a>
                    </div>
                    <div class="quick-link">
                        <a href="~/WorkerAdmin/WorkerAdminDashboard">
                            <i class="fas fa-user-plus"></i>
                            <span>Control Users</span>
                        </a>
                    </div>
                    <div class="quick-link">
                        <a href="~/SparePartsAdmin/SparePartsAdminDashboard">
                            <i class="fas fa-cogs"></i>
                            <span>Check Parts</span>
                        </a>
                    </div>

                    <div class="quick-link">
                        <a href="~/CleaningLogs/CleaningLogsAdminDashboard">
                            <i class="fas fa-file-alt"></i>
                            <span>View Logs</span>
                        </a>
                    </div>
                    <div class="quick-link">
                        <a href="~/SystemSettingsAdmin/SystemSettings">
                            <i class="fas fa-shield-alt"></i>
                            <span>Change Settings</span>
                        </a>
                    </div>

                </div>

                <!-- Main Dashboard Grid -->
                <div class="dashboard-grid">
                    <!-- Machine Status Section -->
                    <div class="machine-status">
                        <div class="section-header">
                            <h3 class="section-title">Machine Status</h3>
                         
                        </div>
                        <div class="table-responsive">
                            <table>
                                <thead>
                                    <tr>
                                        <th>Machine ID</th>
                                        <th>Name</th>
                                        <th>Status</th>
                                        <th>Last Maintenance</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var x in machines)
                                    {
                                        <tr>
                                            <td>
                                                @x.MachineId
                                            </td>
                                            <td>
                                                @x.Name
                                            </td>
                                            <td>
                                                @x.Status
                                            </td>
                                            <td>
                                                @x.LastMaintenanceDate
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <!-- Maintenance Requests Section -->
                    <div class="maintenance-requests">
                        <div class="section-header">
                            <h3 class="section-title">Maintenance Requests</h3>
                           
                        </div>
                        <div class="table-responsive">
                            <table>
                                <thead>
                                    <tr>
                                        <th>History ID</th>
                                        <th>Machine ID</th>
                                        <th>Repair Details</th>
                                        <th> Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var x in maintenanceHistories)
                                    {
                                        <tr>
                                            <td>
                                                @x.HistoryID
                                            </td>
                                            <td>
                                                @x.MachineID
                                            </td>
                                            <td>
                                                @x.RepairDetails
                                            </td>
                                            <td>
                                                @x.CompletionDate
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <!-- Notifications Panel -->
                    <div class="notifications-panel">
                        <div class="section-header">
                            <h3 class="section-title">Recent Notifications</h3>
                            <div class="section-actions">
                                <button class="btn btn-outline-primary">
                                    <i class="fas fa-check-double"></i> Mark All Read
                                </button>
                            </div>
                        </div>
                        <div class="notification-list">
                            <div class="notification-item">
                                <div class="notification-icon bg-danger">
                                    <i class="fas fa-exclamation-circle"></i>
                                </div>
                                <div class="notification-content">
                                    <div class="notification-title">Critical Alert: Autoclave C303</div>
                                    <div class="notification-text">Machine has reported temperature fluctuations outside safe operating parameters.</div>
                                    <div class="notification-time">10 minutes ago</div>
                                </div>
                            </div>
                            <div class="notification-item">
                                <div class="notification-icon bg-success">
                                    <i class="fas fa-check-circle"></i>
                                </div>
                                <div class="notification-content">
                                    <div class="notification-title">Maintenance Complete</div>
                                    <div class="notification-text">Scheduled maintenance for Mixer D404 completed by Technician Robert Lee.</div>
                                    <div class="notification-time">45 minutes ago</div>
                                </div>
                            </div>
                            <div class="notification-item">
                                <div class="notification-icon bg-warning">
                                    <i class="fas fa-clock"></i>
                                </div>
                                <div class="notification-content">
                                    <div class="notification-title">Maintenance Due Soon</div>
                                    <div class="notification-text">3 machines require maintenance in the next 7 days.</div>
                                    <div class="notification-time">2 hours ago</div>
                                </div>
                            </div>
                            <div class="notification-item">
                                <div class="notification-icon bg-info">
                                    <i class="fas fa-user-plus"></i>
                                </div>
                                <div class="notification-content">
                                    <div class="notification-title">New Staff Assignment</div>
                                    <div class="notification-text">Technician Eliza Martinez has been assigned to your team.</div>
                                    <div class="notification-time">5 hours ago</div>
                                </div>
                            </div>
                            <div class="notification-item">
                                <div class="notification-icon bg-primary">
                                    <i class="fas fa-box"></i>
                                </div>
                                <div class="notification-content">
                                    <div class="notification-title">Spare Parts Arrived</div>
                                    <div class="notification-text">Order #38295 for replacement parts has been received.</div>
                                    <div class="notification-time">Yesterday</div>
                                </div>
                            </div>
                            <div class="notification-item">
                                <div class="notification-icon bg-secondary">
                                    <i class="fas fa-file-alt"></i>
                                </div>
                                <div class="notification-content">
                                    <div class="notification-title">Validation Report Available</div>
                                    <div class="notification-text">Q1 2025 validation reports are now available for review.</div>
                                    <div class="notification-time">Yesterday</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Charts Row -->
                <div class="charts-row">
                    <div class="chart-container">
                        <div class="section-header">
                            <h3 class="section-title">Machine Performance</h3>
                            <div class="section-actions">
                                <button class="btn btn-outline-primary">
                                    <i class="fas fa-calendar"></i> Period
                                </button>
                            </div>
                        </div>
                        <canvas id="machinePerformanceChart" height="250"></canvas>
                    </div>
                    <div class="chart-container">
                        <div class="section-header">
                            <h3 class="section-title">Maintenance Distribution</h3>
                            <div class="section-actions">
                                <button class="btn btn-outline-primary">
                                    <i class="fas fa-download"></i> Export
                                </button>
                            </div>
                        </div>
                        <canvas id="maintenanceDistributionChart" height="250"></canvas>
                    </div>
                </div>
            </div>


            <!-- Footer -->
            <footer class="footer">
                <div class="footer-content">
                    <div class="footer-copyright">
                        &copy; 2025 SafeCycle System. All rights reserved.
                    </div>
                    <div class="footer-links">
                        <a href="#">Privacy Policy</a>
                        <a href="#">Terms of Service</a>
                        <a href="#">Support</a>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.min.js"></script>
    <script>
        // Sidebar Toggle Functionality
        document.getElementById('sidebar-toggle').addEventListener('click', function() {
            document.getElementById('sidebar').classList.toggle('collapsed');
        });

        // Mobile Menu Toggle
        document.getElementById('menu-toggle').addEventListener('click', function() {
            document.getElementById('sidebar').classList.toggle('mobile-active');
        });

        // Machine Performance Chart
        var perfCtx = document.getElementById('machinePerformanceChart').getContext('2d');
        var performanceChart = new Chart(perfCtx, {
            type: 'line',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                datasets: [{
                    label: 'Operational Hours',
                    data: [720, 680, 710, 690, 730, 705],
                    borderColor: '#4da6ff',
                    backgroundColor: 'rgba(77, 166, 255, 0.1)',
                    borderWidth: 2,
                    pointBackgroundColor: '#4da6ff',
                    tension: 0.4
                }, {
                    label: 'Downtime Hours',
                    data: [24, 40, 30, 50, 15, 20],
                    borderColor: '#dc3545',
                    backgroundColor: 'rgba(220, 53, 69, 0.1)',
                    borderWidth: 2,
                    pointBackgroundColor: '#dc3545',
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });

        // Maintenance Distribution Chart
        var maintCtx = document.getElementById('maintenanceDistributionChart').getContext('2d');
        var maintenanceChart = new Chart(maintCtx, {
            type: 'doughnut',
            data: {
                labels: ['Preventive', 'Corrective', 'Predictive', 'Emergency'],
                datasets: [{
                    data: [65, 20, 10, 5],
                    backgroundColor: [
                        '#28a745',
                        '#ffc107',
                        '#17a2b8',
                        '#dc3545'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                legend: {
                    position: 'bottom'
                }
            }
        });
    </script>
</body>
</html>