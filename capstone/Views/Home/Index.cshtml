    <!-- JavaScript -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // DOM Elements
            const themeToggle = document.querySelector('.theme-toggle');
            const langToggle = document.querySelector('.lang-toggle');
            const navToggle = document.querySelector('.nav-toggle');
            const navMenu = document.querySelector('.nav-menu');
            const backToTop = document.getElementById('back-to-top');
            const sections = document.querySelectorAll('section:not(.hero)');
            const dots = document.querySelectorAll('.dot');
            const screenshots = document.querySelectorAll('.screenshot');
            const loginForm = document.getElementById('loginForm');

            // Theme Toggle
            themeToggle.addEventListener('click', function() {
                const currentTheme = document.documentElement.getAttribute('data-theme');
                const newTheme = currentTheme === 'dark' ? 'light' : 'dark';

                // Apply animation
                document.body.style.opacity = '0.8';

                setTimeout(() => {
                    document.documentElement.setAttribute('data-theme', newTheme);

                    // Update icon
                    const themeIcon = themeToggle.querySelector('i');
                    if (newTheme === 'dark') {
                        themeIcon.classList.remove('fa-moon');
                        themeIcon.classList.add('fa-sun');
                        themeToggle.setAttribute('title', currentLang === 'ar' ? 'تبديل إلى الوضع الفاتح' : 'Toggle Light Mode');
                    } else {
                        themeIcon.classList.remove('fa-sun');
                        themeIcon.classList.add('fa-moon');
                        themeToggle.setAttribute('title', currentLang === 'ar' ? 'تبديل إلى الوضع المظلم' : 'Toggle Dark Mode');
                    }

                    // Store preference in localStorage
                    localStorage.setItem('safecycle-theme', newTheme);

                    document.body.style.opacity = '1';
                }, 200);
            });

            // Language Toggle
            let currentLang = 'en';

            langToggle.addEventListener('click', function() {
                // Toggle between English and Arabic
                currentLang = currentLang === 'en' ? 'ar' : 'en';

                // Apply animation
                document.body.style.opacity = '0.8';

                setTimeout(() => {
                    // Update body class for RTL/LTR
                    if (currentLang === 'ar') {
                        document.body.classList.add('rtl');
                    } else {
                        document.body.classList.remove('rtl');
                    }

                    // Update language text
                    document.querySelector('.lang-text').textContent = currentLang === 'ar' ? 'AR' : 'EN';

                    // Update all translatable elements
                    const translatableElements = document.querySelectorAll('[data-en]');
                    translatableElements.forEach(element => {
                        element.textContent = element.getAttribute(`data-${currentLang}`);
                    });

                    // Update placeholders
                    const inputElements = document.querySelectorAll('input[data-en-placeholder]');
                    inputElements.forEach(element => {
                        element.placeholder = element.getAttribute(`data-${currentLang}-placeholder`);
                    });

                    // Store preference in localStorage
                    localStorage.setItem('safecycle-lang', currentLang);

                    document.body.style.opacity = '1';
                }, 200);
            });

            // Mobile Navigation Toggle
            navToggle.addEventListener('click', function() {
                navMenu.classList.toggle('active');

                const icon = navToggle.querySelector('i');
                if (navMenu.classList.contains('active')) {
                    icon.classList.remove('fa-bars');
                    icon.classList.add('fa-times');
                } else {
                    icon.classList.remove('fa-times');
                    icon.classList.add('fa-bars');
                }
            });

            // Smooth scrolling for navigation links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function(e) {
                    e.preventDefault();

                    // Close mobile menu if open
                    if (navMenu.classList.contains('active')) {
                        navMenu.classList.remove('active');
                        navToggle.querySelector('i').classList.remove('fa-times');
                        navToggle.querySelector('i').classList.add('fa-bars');
                    }

                    const targetId = this.getAttribute('href');
                    if (targetId === '#') return;

                    const targetElement = document.querySelector(targetId);
                    if (targetElement) {
                        window.scrollTo({
                            top: targetElement.offsetTop - 70,
                            behavior: 'smooth'
                        });
                    }
                });
            });

            // Scroll animations for sections
            const observerOptions = {
                threshold: 0.1
            };

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('visible');
                    }
                });
            }, observerOptions);

            sections.forEach(section => {
                observer.observe(section);
            });

            // Screenshot slider functionality
            let currentScreenshot = 0;
            let slideInterval;

            function showScreenshot(index) {
                screenshots.forEach((screenshot, i) => {
                    screenshot.classList.remove('active');
                    dots[i].classList.remove('active');
                });

                screenshots[index].classList.add('active');
                dots[index].classList.add('active');
                currentScreenshot = index;
            }

            function nextScreenshot() {
                currentScreenshot = (currentScreenshot + 1) % screenshots.length;
                showScreenshot(currentScreenshot);
            }

            // Initialize slider
            function startSlider() {
                slideInterval = setInterval(nextScreenshot, 5000);
            }

            function stopSlider() {
                clearInterval(slideInterval);
            }

            startSlider();

            // Click on dots to change screenshot
            dots.forEach((dot, index) => {
                dot.addEventListener('click', () => {
                    stopSlider();
                    showScreenshot(index);
                    startSlider();
                });
            });

            // Screenshot container hover effects
            const screenshotContainer = document.querySelector('.screenshots-container');

            screenshotContainer.addEventListener('mouseenter', stopSlider);
            screenshotContainer.addEventListener('mouseleave', startSlider);

            // Back to top button
            window.addEventListener('scroll', function() {
                if (window.pageYOffset > 300) {
                    backToTop.style.display = 'block';
                } else {
                    backToTop.style.display = 'none';
                }
            });

            // Form submission (prevent default for demo)
            if (loginForm) {
                loginForm.addEventListener('submit', function(e) {
                    e.preventDefault();

                    // Get form data
                    const username = document.getElementById('username').value;
                    const password = document.getElementById('password').value;

                    // Simple validation
                    if (!username || !password) {
                        alert(currentLang === 'ar' ? 'يرجى تعبئة جميع الحقول المطلوبة' : 'Please fill in all required fields');
                        return;
                    }

                    // Simulate login - in a real app, this would be an API call
                    alert(currentLang === 'ar'
                          ? 'تم تسجيل الدخول بنجاح! سيتم تحويلك إلى لوحة التحكم.'
                          : 'Login successful! You would be redirected to the dashboard.');

                    // Clear form
                    loginForm.reset();
                });
            }

            // Load saved preferences (theme and language)
            function loadSavedPreferences() {
                // Theme
                const savedTheme = localStorage.getItem('safecycle-theme');
                if (savedTheme) {
                    document.documentElement.setAttribute('data-theme', savedTheme);

                    // Update icon
                    const themeIcon = themeToggle.querySelector('i');
                    if (savedTheme === 'dark') {
                        themeIcon.classList.remove('fa-moon');
                        themeIcon.classList.add('fa-sun');
                    }
                }

                // Language
                const savedLang = localStorage.getItem('safecycle-lang');
                if (savedLang && savedLang !== 'en') {
                    // Trigger language switch if saved language is not English
                    currentLang = 'en';  // Set to opposite so toggle works correctly
                    langToggle.click();
                }
            }

            // Call function to load saved preferences
            loadSavedPreferences();

            // Page load animations
            setTimeout(() => {
                document.querySelector('.hero').style.animation = 'fadeInUp 1s ease forwards';
            }, 300);
        });
    </script>
