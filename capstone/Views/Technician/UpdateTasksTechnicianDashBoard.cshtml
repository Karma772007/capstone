        <script>
                // Wait for the DOM to be fully loaded before running the script
            document.addEventListener('DOMContentLoaded', function() {
                // Sidebar Toggle Functionality
                const sidebarToggle = document.getElementById('sidebar-toggle');
                const sidebar = document.getElementById('sidebar');
                const menuToggle = document.getElementById('menu-toggle');

                if (sidebarToggle) {
                    sidebarToggle.addEventListener('click', function() {
                        sidebar.classList.toggle('collapsed');
                    });
                }

                // Mobile Menu Toggle
                if (menuToggle) {
                    menuToggle.addEventListener('click', function() {
                        sidebar.classList.toggle('mobile-active');
                    });
                }

                // Set active menu item based on current page
                const currentPageUrl = window.location.pathname;
                const sidebarItems = document.querySelectorAll('.sidebar-item');

                sidebarItems.forEach(item => {
                    // Remove active class from all items first
                    item.classList.remove('active');

                    // Compare the href with the current page URL
                    const itemUrl = item.getAttribute('href');

                    // Check if the current page matches this menu item
                    if (itemUrl === currentPageUrl ||
                        (currentPageUrl.endsWith('/index.html') && itemUrl === '#')) {
                        item.classList.add('active');
                    }
                });
            });
                // Mock tasks array
                const tasks = [
                  { id: 1, machine: "Pill Press A1", description: "Check pressure levels", priority: "High", date: "2023-10-01", status: "In Progress" },
                  { id: 2, machine: "Mixing Tank B2", description: "Replace worn-out blades", priority: "Medium", date: "2023-10-02", status: "Waiting for Parts" },
                  { id: 3, machine: "Packaging Line C3", description: "Inspect conveyor belt", priority: "Low", date: "2023-10-03", status: "Completed" }
                ];

                // Render tasks to the DOM
                function renderTasks(filteredTasks) {
                  const taskList = document.getElementById("taskList");
                  taskList.innerHTML = "";

                  filteredTasks.forEach(task => {
                    const row = document.createElement("tr");

                    row.innerHTML = `
                      <td>${task.id}</td>
                      <td>${task.machine}</td>
                      <td>${task.description}</td>
                      <td>${task.priority}</td>
                      <td>${task.date}</td>
                      <td><span class="badge ${task.status.toLowerCase().replace(/ /g, '-')}">${task.status}</span></td>
                      <td class="text-end">
                        <i class="action-icon" data-feather="edit" data-bs-toggle="modal" data-bs-target="#updateTaskModal" title="Edit"></i>
                        <i class="action-icon" data-feather="trash-2" onclick="confirmDelete(${task.id})" title="Delete"></i>
                      </td>
                    `;

                    taskList.appendChild(row);
                  });
                }

                // Initial render
                renderTasks(tasks);

                // Search and filter functionality
                document.querySelector('.filters-panel input').addEventListener("input", (e) => {
                  const query = e.target.value.toLowerCase();
                  const filteredTasks = tasks.filter(task =>
                    task.machine.toLowerCase().includes(query) || task.status.toLowerCase().includes(query)
                  );
                  renderTasks(filteredTasks);
                });

                document.getElementById("filterStatus").addEventListener("change", (e) => {
                  const selectedStatus = e.target.value;
                  const filteredTasks = selectedStatus ? tasks.filter(task => task.status === selectedStatus) : tasks;
                  renderTasks(filteredTasks);
                });



                // Initialize Feather icons
